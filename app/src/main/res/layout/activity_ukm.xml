<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UkmActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/text_notifications"
        android:weightSum="1"
        android:background="@color/blue"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/btn_kembali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
            android:textColor="@color/black"
            android:textSize="25sp" />
        <TextView
            android:layout_weight="0.8"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:text="Detail UKM"
            android:paddingTop="5dp"
            android:textAlignment="center"
            android:textColor="@color/dark"
            android:textSize="25sp"
            android:textStyle="bold"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@id/text_notifications">

        <ImageView
            android:id="@+id/detil_gambar"
            android:layout_width="204dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:src="@drawable/ves" />

        <TextView
            android:id="@+id/detil_singkatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:text="HIMATIKA"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/detil_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="Himpunan Mahasiswa Informatika"
            android:layout_marginTop="3dp"
            android:padding="2dp"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/detil_deskripsi"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="15dp"
            android:paddingHorizontal="13dp"
            android:background="@drawable/border_textview"
            android:justificationMode="inter_word"
            android:text="deskripsi"
            android:textColor="@color/dark"
            android:textSize="17sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_daftar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_radius"
            android:backgroundTint="@color/blue"
            android:textColor="@color/dark"
            android:text="daftar ukm"
            android:textStyle="bold"
            />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>